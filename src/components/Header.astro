---
import MobileNav from '../components/MobileNav.astro'
---
<header class="header">
    <MobileNav></MobileNav>
    <div class="title-paragraph">
        <h1 class="header-title">A modern publishing platform</h1>
        <p class="header-paragraph">Grow your audience and build your online brand</p>
    </div>

    <div class="call-to-action">
        <button class="start-for-free">Start for free</button>
        <button class="learn-more">Learn more</button>
    </div>
</header>

<style>
	.header {
		width: 100%;
		height: auto;

		background-image: linear-gradient(#ff816c, #ff585f); 
		padding: 1.5rem;
        padding-bottom: 8rem;
        border-bottom-left-radius: 7rem;
	}

    .title-paragraph {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

    .header-title,
    .header-paragraph {
        color: white;
    }

    .header-title {
        padding-top: 4rem;
    }

    .header-paragraph {
        font-size: 1.25rem;
        padding: 1rem;
    }

    .call-to-action {
        display: flex;
        justify-content: center;
        gap: 1rem;

        padding: 2rem 0;
    }

    .start-for-free,
    .learn-more {
        font-size: 1.15rem;
        font-weight: bold;

        border: 0;
        border-radius: 2rem;
        padding: .50rem 1.15rem;
    }

    .start-for-free {
        color: rgb(173, 64, 64);

        /* border: 0;
        border-radius: 2rem;
        padding: .50rem .95rem; */
    }

    .learn-more {
        color: white;
        background-color: transparent;
        border: 1px solid white;
    }
</style>